<% if @item.completed? %>
 if($('#item-complete' +<%= @item.id %>).prop('checked')) {
   $('#item-' +<%= @item.id %>).remove();
   $('#js-table tbody').prepend("<%= escape_javascript(render(@item)) %>");
   $('#item-' +<%= @item.id %>).css({"color": "black", "text-decoration": "none"});
   $('#item-complete' +<%= @item.id %>).prop('checked', false)
   <% @item.completed = false %>
  }
 else {
   $('#item-' +<%= @item.id %>).remove();
   $('#js-table tbody').append("<%= escape_javascript(render(@item)) %>");
   $('#item-' +<%= @item.id %>).css({"color": "red", "text-decoration": "line-through"});
   $('#item-complete' +<%= @item.id %>).prop('checked', true)
   <% @item.completed = true %>
 }

<% else %>
  $('#item-' +<%= @item.id %>).remove();
  $('#js-table tbody').prepend("<%= escape_javascript(render(@item)) %>");
  $('#item-' +<%= @item.id %>).css({"color": "black", "text-decoration": "none"});
<% end %>
